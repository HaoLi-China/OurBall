<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="1"
      android:versionName="1.0" package="game.ourball.mainview"
      >
      
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name="game.ourball.mainview.MainView"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
         <activity android:name="game.ourball.bluetooth.DeviceListActivity"
                  android:label="@string/select_device"
                  android:theme="@android:style/Theme.Dialog"
                  android:configChanges="orientation|keyboardHidden" />
         
         <activity android:name="game.ourball.mainview.LevelView1"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboardHidden" />
         
         <activity android:name="game.ourball.mainview.LevelView2"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboardHidden" />
         
         <activity android:name="game.ourball.mainview.AboutView"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboardHidden" />
         
         <activity android:name="game.ourball.mainview.HelpView"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboardHidden" />
         
          <activity android:name="game.ourball.gameview.OnePlayerActivity"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboardHidden" />
          
           <activity android:name="game.ourball.gameview.TwoPlayersActivity"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboardHidden" />
       

    </application>
    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    
    <uses-permission android:name="android.permission.VIBRATE" />

</manifest> 